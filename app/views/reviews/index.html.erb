<h1>Listing reviews</h1>

<table>
  <tr>
    <th>Isbn</th>
    <th>Title</th>
    <th>Reviewer</th>
    <th>Rank</th>
    <th>Status</th>
    <th>Content</th>
    <th>Blog entry</th>
    <th>Index</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reviews.each do |review| %>
  <tr>
    <td><%= review.isbn %></td>
    <td><%= review.title %></td>
    <td><%= review.reviewer %></td>
    <td><%= review.rank %></td>
    <td><%= review.status %></td>
    <td><%= review.content %></td>
    <td><%= review.blog_entry %></td>
    <td><%= review.index %></td>
    <td><%= link_to 'Show', review %></td>
    <td><%= link_to 'Edit', edit_review_path(review) %></td>
    <td><%= link_to 'Destroy', review, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

